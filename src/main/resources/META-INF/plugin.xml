<idea-plugin>
    <id>com.example.speechtotext</id>
    <name>CodeVoice</name>
    <vendor email="you@example.com">Sascha Roggatz</vendor>
    <description>
        Real-time speech-to-text dictation in JetBrains IDEs using Google Cloud STT.
    </description>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="ToggleDictationAction"
                class="com.example.codevoice.actions.ToggleDictationAction"
                text="Toggle Dictation"
                description="Start or stop real-time speech-to-text">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>